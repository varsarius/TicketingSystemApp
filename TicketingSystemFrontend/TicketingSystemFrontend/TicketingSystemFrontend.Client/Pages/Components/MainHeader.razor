@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components

<header class="d-flex flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom">
    <!-- Logo -->
    <a href="/" class="d-flex align-items-center mb-2 mb-md-0 text-dark text-decoration-none">
        <img src="@Assets["favicon.png"]" alt="My Logo" width="64" height="64" class="me-2" />
        <span class="fs-4">@PageHeaderTitle</span>
    </a>

    <!-- Navbar links -->
    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><NavLink href="/" class="nav-link px-2 link-dark">Tickets</NavLink></li>
        <li><NavLink href="/dashboard" class="nav-link px-2 link-dark">Dashboard</NavLink></li>
        <li><NavLink href="/articles" class="nav-link px-2 link-dark">Articles</NavLink></li>

        @* Dynamic children placeholder *@
        @ChildContent
    </ul>

    @* Another placeholder for buttons on the right side *@
    @ButtonsContent
</header>

@code {
    [Parameter]
    public string PageHeaderTitle { get; set; } = "Ticketing System";

    [Parameter]
    public Microsoft.AspNetCore.Components.ResourceAssetCollection Assets { get; set; }

    // Placeholder for interactive elements inside the nav
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    // Placeholder for interactive elements on the right side
    [Parameter]
    public RenderFragment ButtonsContent { get; set; }

    protected override bool ShouldRender()
    {
        // Header itself does not re-render
        return false;
    }
}
